  "repository": {
    "type": "git",
    "url": "git+https://github.com/zero-component/button.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zero-component/button/issues"
  },
  "homepage": "https://github.com/zero-component/button#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/classnames": "^2.2.8",
    "@types/lodash.omit": "^4.5.6",
    "@types/react": "^16.8.20",
    "@types/react-dom": "^16.8.4",
    "lint-staged": "^8.2.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.5.0",
    "classnames": "^2.2.6",
    "lodash.omit": "^4.5.0"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
